@model IEnumerable<TrainingMongoDB.Data.Entities.Section>

@{
    ViewBag.Title = "Section Index";
}

<h2>Section Index</h2>
@foreach (var doc in Model) { 
    <div class="well">
        <fieldset>
            <legend>@Html.DisplayFor(modelItem => doc.Title)</legend>

            <div class="form-group">
                @Html.DisplayFor(modelItem => doc.Id)
            </div>


            <div class="form-group">
                    <button type="button" class="btn btn-danger">Delete</button>
                    <button type="button" class="btn btn-primary">Edit</button>
                @Html.ActionLink("Details", "Details", new {id = doc.Id})
            </div>
       </fieldset>
    </div>
}

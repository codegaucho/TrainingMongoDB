<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/bootstrap/cerulean/bootstrap.min.css")
    @Styles.Render("~/Content/font-awesome/css/font-awesome.min.css")
    @Styles.Render("~/Content/Site.css")

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
        @Scripts.Render("~/Content/bootstrap/html5shiv.js")
        @Scripts.Render("~/Content/bootstrap/respond.min.js")
    <![endif]-->

    @RenderSection("head", required: false)
</head>
<body>
    @RenderPage("Navigator.cshtml")

    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                @RenderBody()
            </div>
        </div>
    </div>

    <footer class="container">
        <div class="row">
            <div class="col-lg-12">
                &copy; 2013, U.S. EPA Region 2
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Content/bootstrap/bootstrap.min.js")

    @RenderSection("scripts", required: false)
</body>
</html>
